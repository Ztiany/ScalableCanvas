<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.image.DoodleView
        android:id="@+id/design_dv_doodle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/color_design_bg"
        />


    <include
        android:id="@+id/design_view_sign_tools"
        layout="@layout/design_layout_sign_tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        />

    <ImageView
        android:id="@+id/design_iv_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/common_icon_guide"
        android:tint="@color/black"
        app:layout_marginRightPercent="10%"
        app:layout_marginTopPercent="10%"
        tools:ignore="ContentDescription"/>

</android.support.percent.PercentRelativeLayout>